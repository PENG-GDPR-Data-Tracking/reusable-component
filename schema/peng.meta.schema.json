{
    "$schema": "https://json-schema.org/draft/2019-09/meta/core",
    "$id": "https://tu-berlin.de/insertURL/meta",
    "$vocabulary": {
        "https://json-schema.org/draft/2019-09/vocab/core": true,
        "https://json-schema.org/draft/2019-09/vocab/applicator": true,
        "https://json-schema.org/draft/2019-09/vocab/validation": true,
        "https://json-schema.org/draft/2019-09/vocab/meta-data": true,
        "https://json-schema.org/draft/2019-09/vocab/format": false,
        "https://json-schema.org/draft/2019-09/vocab/content": true
    },
    "allOf": [{ "$ref": "/schema/base" }],
    "$recursiveAnchor": true,

    "title": "meta schema extension introducing GDPR tags",
    "type": ["object", "boolean"],
    "properties": {
        "$id": {
            "type": "string",
            "format": "uri-reference",
            "$comment": "Non-empty fragments not allowed.",
            "pattern": "^[^#]*#?$"
        },
		"gdprReason": {
            "type": "string"
        },
        "gdprDataType": {
            "type": "string",
			"propertyNames": {"enum": ["identifier", "quasi-identifier", "sensitive", "non-sensitive"]}
        },
        "gdprCategory": {
            "type": "string",
            "propertyNames": {"enum": ["special", "personal", "anonymous"]}
        },
        "gdprNotProvidedConsequence": {
            "type": "string"
        }
    },
    "required": ["gdprReason", "gdprDataType", "gdprCategory"]
}
